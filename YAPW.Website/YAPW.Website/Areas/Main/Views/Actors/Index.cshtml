@using YAPW.Models;
@model List<ActorDataModel>
@{
    Layout = null;
    var OrderTypes = ViewData["OrderTypes"] as SelectList;
    var OderNumber = ViewBag.OrderNumber;
    var OrderTypeProctionId = ViewBag.OrderTypeProduction;
}
<partial name="_ContentHeader" />
<div class="row ">
    <div class="col-lg-12 ">
        <div class="card card-outline ">
            <div class="card-header">
                <h2 class="card-title" style="padding-bottom:8px">
                    <i class="fa-solid fa-cart-shopping"></i>
                    Actors
                </h2>
                <div class="card-tools" style="padding-right:12px; padding-left:5px">
                    <div class="row ">
                        
                    </div>
                </div>
            </div>
            <div class="tableOverlayContainer">
                <div class="overlay tableOverlay" style="display:none">
                    <i class="fas fa-2x fa-sync-alt fa-spin"></i>
                </div>

                @if (Model?.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        @item.Name
                    }
                }
            </div>
            <div class="card-body OrderListContainer">
                
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
    $(document).ready(function () {

        $(document).bind('keypress', function(e) {
          if(e.which === 13) { // Return
             $('.btnRefreshOrders').trigger('click');
          }
        });
        PrepareAndPostFormWithoutRefresh('#addReasonForm', "#errorMessage", "#btnSubmitReason", "operations/orders/order", '#addReasonModal', '',".OrderListContainer", ".overlay", ".tableOverlayContainer");
        if ("@OderNumber" != ""){
            $('#erpNumberOrder').val("@OderNumber");
            $('#selectOrderType').val("@OrderTypeProctionId");
            $('#btnSubmitReason').trigger('click');
        }

    });
</script>